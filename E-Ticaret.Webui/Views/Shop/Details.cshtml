@model E_Ticaret.Webui.ViewModel.ProductDetailModel

<div class="row">
    <div class="col-md-3">
        <img src="~/img/@Model.product.ImageUrl" class="card-img">
    </div>
    <div class="col-md-9">
        <h5 class="mb-3">@Model.product.Name</h5>
        <hr />
        @foreach (var item in Model.Categories)
        {
            <a href="#" class="btn btn-link p-0 mb-3">@item.Name</a>
        }
        <div class="mb-3">
            <h4 class="text-primary mb-3"><i class="fas fa-lira-sign"></i> @Model.product.Price</h4>
        </div>
        <form asp-controller="Cart" asp-action="AddToCard" method="post">
            <input type="hidden" name="productId" value="@Model.product.ProductId" />
            <div class="input-group mb-3">
                <input type="number"  class="form-control" name="quantity" value="1" min="1" step="1" />
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary">
                 <i class="fas fa-cart-plus"></i> Add to Cart </button>
                    
                 </div>
            
            </div>
        </form>
</div>
</div>
<div class="row">
    <div class="col-md-12">
        <p class="p-3">@Html.Raw(@Model.product.Description)</p> <!--işler veriyi <p> etiketleri çıkmaz ekrana-->
    </div>
</div>
