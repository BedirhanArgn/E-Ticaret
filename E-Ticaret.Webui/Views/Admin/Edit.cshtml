@model E_Ticaret.Webui.Models.ProductView
@{
    ViewData["Title"] = "CreateProduct";
    //Formun name'leri modellerle aynı olsun
}

<h1 class="h3">Create Product</h1>
<hr />
<form asp-controller="Admin" asp-action="Edit" method="post">
    <input type="hidden" asp-for="ProductId" value="@Model.ProductId"/>
    <div class="row">
        <div class="col-md-10">
            <div class="form-group row">
                <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Name" />
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Url" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Url" />
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <textarea class="form-control" asp-for="Description"></textarea>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="ImageUrl" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="ImageUrl" />
                </div>
            </div>


            <div class="form-group row">
                <label asp-for="Price" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Price" />
                </div>
            </div>


            <div class="form-group row">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>


</form>
