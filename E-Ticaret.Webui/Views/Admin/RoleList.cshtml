@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "RoleList";
}

<h1>RoleList</h1>
<hr/>
<div class="row">
    <div class="col-md-12">
        <h1>Admin Products</h1>
        <hr />
        <a class="btn btn-primary btn-sm" href="/admin/role/create">Add Role</a>
            <table class="table table-bordered mt-3">
                <thead>
                    <tr>
                        <td>Id </td>
                        <td>Role Name</td>
                        <td></td>            
                        <td></td>
                </thead>
                @if (Model.Count() > 0)
                {
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id </td>
                            <td>@item.Name</td>
                            <td>
                                <a href="/admin/role/@item.Id" class="btn btn-primary btn-sm mr-2">Edit</a>
                                <form method="post" style="display:inline;" action="/admin/role/delete">
                                    <input type="hidden" name="RoleId" value="@item.Id" />
                                    <button class="btn btn-danger btn-sm mr-2">Delete</button>
                                </form>

                            </td>
                        </tr>
                    }
                </tbody>
                }
                else
                {



                }

            </table>
        
    

    </div>


</div>