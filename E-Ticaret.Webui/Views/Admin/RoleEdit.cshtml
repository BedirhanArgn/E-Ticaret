@model RoleDetails
@{
    ViewData["Title"] = "RoleEdit";
}

<h1>Edit Role</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-controller="Admin" asp-action="RoleEdit" method="post">
            <input type="hidden" name="RoleId" value="@Model.Role.Id" />
            <input type="hidden" name="RoleName" value="@Model.Role.Name" />
            <h6 class="bg-info text-white p-1">Add To @Model.Role.Name</h6>
            <table class="table table-bordered table-sm">
                @if (@Model.NonMembers.Count() == 0)
                {
                    <tr>
                        <td colspan="2">Bütün kullanıcılar role ait</td>
                    </tr>
                }
                else
                {

                    @foreach (var user in Model.NonMembers)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td><input type="checkbox" name="IdsToAdd" value="@user.Id" /></td>
                        </tr>


                    }

                }

            </table>

            <hr />


            <h6 class="bg-info text-white p-1">Remove From @Model.Role.Name</h6>
            <table class="table table-bordered table-sm">
                @if (@Model.Members.Count() == 0)
                {
                    <tr>
                        <td colspan="2">Role Ait Kullanıcı Yok</td>
                    </tr>
                }
                else
                {

                    @foreach (var user in Model.Members)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td><input type="checkbox" name="IdsToDelete" value="@user.Id" /></td>
                        </tr>
                    }
                }
            </table>
            <div class="form-group row">
                <button type="submit" class="btn btn-primary">Save Role</button>
            </div>
        </form>
    </div>





</div>
